<UserControl x:Class="VenPiece.Desktop.Views.InvoiceListView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:VenPiece.Desktop.Views"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <DataGrid ItemsSource="{Binding Invoices}"
                  AutoGenerateColumns="False"
                  CanUserAddRows="False"
        >
            <DataGrid.Columns>
                <DataGridTextColumn Binding="{Binding Order.Client.Name}"
                                    Header="Client Name"/>
                <DataGridTextColumn Binding="{Binding Date}"
                                    Header="Date"/>
                <DataGridTextColumn Binding="{Binding PayementDeadline}"
                                    Header="Payement Deadline"/>
            </DataGrid.Columns>

        </DataGrid>   
    </Grid>
</UserControl>
