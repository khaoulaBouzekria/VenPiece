<UserControl x:Class="VenPiece.Desktop.Views.OrderListView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:VenPiece.Desktop.Views"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <DataGrid ItemsSource="{Binding Orders}"
                  AutoGenerateColumns="False"
                  CanUserAddRows="False"
        >
            <DataGrid.Columns>
                <DataGridTextColumn Binding="{Binding Client.Name}"
                                    Header="Client Name"/>
                <DataGridTextColumn Binding="{Binding OrderDate}"
                                    Header="Date"/>
                <DataGridTextColumn Binding="{Binding State}"
                                    Header="State"/>
                <DataGridTextColumn Binding="{Binding ItemsTotal}"
                                    Header="Items total"/>
                <DataGridTextColumn Binding="{Binding Phone}"
                                    Header="Phone"/>
            </DataGrid.Columns>

        </DataGrid>
    </Grid>
</UserControl>
